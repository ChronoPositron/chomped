<p id="notice"><%= notice %></p>

<h1>Listing Urls</h1>

<table>
  <thead>
    <tr>
      <th>Original</th>
      <th>Views</th>
      <th>Delete token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.original %></td>
        <td><%= url.views %></td>
        <td><%= url.delete_token %></td>
        <td><%= link_to 'Show', url %></td>
        <td><%= link_to 'Delete', delete_url_path(url) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url', new_url_path %>
